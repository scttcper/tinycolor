{
  "name": "tinycolor-3",
  "version": "0.0.0",
  "description": "Fast, small color manipulation and conversion for JavaScript",
  "author": "Scott Cooper <scttcper@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": ["typescript", "color", "manipulation", "tinycolor", "hsa", "rgb"],
  "main": "./bundles/tinycolor-3.umd.js",
  "module": "./bundles/tinycolor-3.es2015.js",
  "typings": "./public_api.d.ts",
  "scripts": {
    "lint": "tslint -p tsconfig.json -t stylish 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint -p tsconfig.json -t stylish --fix 'src/**/*.ts' 'test/**/*.ts'",
    "lint-staged": "lint-staged",
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.esm.json && tsc -p tsconfig.umd.json && ts-node ./build.ts",
    "build:docs": "typedoc --out docs --target es6 --theme minimal --mode file src && touch docs/.nojekyll",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run test -- --coverage --no-cache",
    "commit": "git-cz",
    "commitlint": "commitlint -e $GIT_PARAMS",
    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "cd dist/package-dist && semantic-release"
  },
  "dependencies": {
    "css-color-names": "^0.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@types/fs-extra": "^5.0.1",
    "@types/jest": "^22.2.2",
    "@types/node": "^9.6.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^15.1.4",
    "travis-deploy-once": "^4.4.1",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-config-standard": "^7.0.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.8.1"
  },
  "release": {
    "branch": "master"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged",
      "commit-msg": "npm run commitlint"
    }
  },
  "lint-staged": {
    "*.ts": ["prettier --write", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "coveragePathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/test/"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverage": true
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
